/**index.wxss**/
.container{
  padding-top: 0;
}
.item{
    width: 100%;
    height: 150rpx;
    position: relative; 
    display: flex;
    margin-top: 10rpx;
}
.item:first-child{
   margin-top: 0;
}
.item .remove{
    width: 60px;
    height: 100%;
    background-color: red;
    position: absolute;
    top: 0;
    right: -60px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.item .number-wrapper{
    height: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.item .ok{
    width: 60px;
    height: 100%;
    padding-right: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #98F5FF;
}
.item .img{
    width: 300rpx;
    height: 100%;
    margin-left: 20rpx;
}
.number-wrapper .name{
    margin: 10rpx 10rpx 10rpx 10rpx;
    font-size: 30rpx;
    overflow: hidden;
    flex: 1;
}
.number-wrapper .count-wrapper{
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}
.number-wrapper .count-wrapper .decrease-btn{
  font-size: 30rpx;
}
.number-wrapper .count-wrapper .increase-btn{
    font-size: 30rpx;
}
.number-wrapper .count-wrapper .count{
  margin: 0 10rpx 0 10rpx;
  font-size: 30rpx;
}
.number-wrapper .price-wrapper{
    margin-left: 10rpx;
}
.number-wrapper .price-wrapper .unit{
  font-size: 30rpx;
}
.number-wrapper .price-wrapper .price{
  margin-left: 10rpx;
  font-size: 30rpx;
}
